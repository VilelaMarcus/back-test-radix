// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
}

model Measurement {
  id          Int      @id @default(autoincrement())
  value       Float
  timestamp   DateTime
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId String
}

model Equipment {
  id          String         @id
  name        String
  description String?
  measurements Measurement[]
}